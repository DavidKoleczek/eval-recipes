{
  "permissions": {
    "allow": [
      "mcp__ide__getDiagnostics",
      "WebSearch",
      "WebFetch",
      "Bash(cp:*)",
      "Bash(find:*)",
      "Bash(mkdir:*)",
      "Bash(ls:*)",
      "Bash(xargs:*)",
      "Bash(tree:*)",
      "Bash(tee:*)",
      "Bash(grep:*)",
      "Bash(git clone:*)",
      "Bash(uv build:*)",
      "Bash(uv sync:*)",
      "Bash(uv run ruff format:*)",
      "Bash(uv run ruff check:*)",
      "Bash(uv run ty:*)",
      "Bash(gh release list:*)",
      "Bash(gh release view:*)"
    ],
    "deny": [],
    "ask": []
  },
  "hooks": {
    "Stop": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "uv run ruff check --fix && uv run ruff format && uv run ty check",
            "timeout": 10
          }
        ]
      }
    ]
  }
}
